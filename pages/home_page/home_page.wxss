/* pages/home_page/home_page.wxss */
/*授权登陆小程序*/
.close_button2{
  height: 40%;
  width: 40%;
  margin-top:100rpx;
}
/*蒙版相关*/
.evil{
  background-color: #000;
  opacity: 0.5;
  position:fixed;
  left:0px;
  top:0px;
  z-index: 3;
}
/*旋转等待提示*/
.spinning{
  position: fixed;
  top: 50%;
  left: 50%;
}
/*增加一个文章的按钮*/
.add_article{
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  margin-left: 80%;
  top:900rpx
}
/*弹窗的确定按钮和取消按钮*/
.buttonsOfPopup{
  margin-top: 0rpx;
}
.confirmButton{
  width: 200rpx;
  height: 100rpx;
  margin-left: 300rpx;
  position: relative;
  top:0rpx;
  background:#20B2AA;
}

.cancelButton{
   width: 200rpx;
  height: 100rpx;
  margin-left: 50rpx;
  position: relative;
  top:100rpx;
}
/*最近文章*/
.articleItem{
  position: relative;
  width: 90%;
  top:-60rpx;
  left:0rpx;
  z-index: 2;
}
.excerptText{
  width: 90%;
  overflow: hidden;
  font-size: 30rpx;
  position: relative;
  /* text-align: center; */
  top:20rpx;
  left:10rpx;
}
.article_image{
  width:200rpx;
  height:200rpx;
  position:relative;
  top:20rpx;
  left:450rpx;
  border-radius: 50%;
}

.empty{
  width:100%;
  height:20rpx;
  position:relative;
}

.titleText{
  position: relative;
  top:140rpx;
  left:10rpx;
  width:80%;
  font-size: 30rpx;
}