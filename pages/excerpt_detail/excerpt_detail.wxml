<!--pages/excerpt_detail/excerpt_detail.wxml-->
<view class='topTitle'>
  <view class='timeView'>{{excerpt_info[0].create_time}}</view>
  <view class='titleView'>{{excerpt_info[0].title}}</view>
</view>
<view class='excerpt'>{{excerpt_detail}}</view>

<view>
  <button class='edit' catchtap='onEdit'>编辑</button>
  <button class='delete' catchtap='onDelete'>删除</button>
  <button class='share' catchtap='onShare' open-type='getUserInfo'>分享</button>
</view>




