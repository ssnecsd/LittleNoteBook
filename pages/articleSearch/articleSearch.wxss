/* pages/articleSearch/articleSearch.wxss */

/*页面样式*/

/*搜索框*/
.containerView{
  margin: 0rpx;
  padding:0rpx;
  width:100%;
}
.topView1{
  margin:2%;
  width:96%;
  position: relative;
}

.searchView{
  width: 75%;
  margin: 2%;
  border-radius: 10rpx;
  height:100rpx;
  position: relative;
  background-color: #fed;
}

.searchIconView,.searchIconImg,.cancelIconView,.cancelIconImg{
  width:80rpx;
  height:80rpx;
  position:absolute;
}
.searchIconView,.cancelIconView{
  margin: 10rpx 10rpx 10rpx 10rpx;

}
.searchInputView{
  margin-left: 100rpx;
  margin-right: 100rpx;
}
.searchInputView,.searchInput{
  height:100%;
  border-radius: 15rpx;
}
.cancelIconView{
  right: 0rpx;
  top:0rpx;
}
.placeholderCls{
  text-align: center;
  font-size:32rpx;

}

.searchBtnView{
  position: absolute;
  top:6rpx;
  right:2%;
  height:100rpx;
}
.searchBtn,searchBtnView{
  border-radius: 10rpx;
}
.searchBtn{
  width:100%;
  height:100%
}

/*文件列表*/


.itemView{
  position:relative;
  padding-left: 5rpx;
  width:98%;
  height:175rpx;
  /* background-color: green; */
}
.dateLine{
  width:5rpx;
  height: 100%;
  background-color: #eee;
  position:absolute;
  left:235rpx;
  z-index:2;
}
.timeItem{
  width: 200rpx;
  position:relative;
  top:32rpx;
}

.smallCircle{
  width:20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 5rpx solid #20B2AA;
  position: relative;
  top:0rpx;
  left:220rpx;
  z-index:3;
}
.articleItem{
  position: relative;
  width: 410rpx;
  height: 125rpx;
  top:-60rpx;
  left:280rpx;
  background-color: #ccffcc;
  border-radius: 10rpx;
}
.titleText{
  width: 280rpx;
  height:90rpx;
  overflow: hidden;
  font-size: 30rpx;
  position: relative;
  top:20rpx;
  left:10rpx;
}
.article_image{
  width:100rpx;
  height:100rpx;
  position:relative;
  left:300rpx;
  top:-75rpx;
}

.no_more{
  text-align: center;
}